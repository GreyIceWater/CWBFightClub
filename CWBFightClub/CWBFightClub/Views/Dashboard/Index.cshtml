@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Admin Dashboard</h1>
<div class="row">
    <div class="col-md-6">
        <div class="border-dark card text-center dashboardCard">
            <div class="card-body">
                <h5 class="card-title">Attendance Records</h5>
                <p class="card-text">Manage your attendance records.</p>
                <a asp-controller="AttendanceRecord" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="border-dark card text-center dashboardCard">
            <div class="card-body">
                <h5 class="card-title">Report Center</h5>
                <p class="card-text">Generate Attendance, Progress and Payment reports.</p>
                <a asp-controller="Dashboard" asp-action="Reports" class="stretched-link"></a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="border-dark card text-center dashboardCard">
            <div class="card-body">
                <h5 class="card-title">Settings</h5>
                <p class="card-text">Set global settings for the app.</p>
                <a asp-controller="Dashboard" asp-action="Settings" class="stretched-link"></a>
            </div>
        </div>
    </div>    
</div>