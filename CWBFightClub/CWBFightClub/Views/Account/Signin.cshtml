@model Account
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}
<br />
<br />

<div class="loginPage_html">

    <div class="col-md-10 offset-1">

        <!-- Card 1, Logo, Login text -->
        <div class="text-center card1">
            <br />
            <p>LOGIN</p>
            <br />
            <hr class="navstyle3" />
            <hr class="navstyle4" />
        </div>

        <!-- Card 2, Login Form -->
        <br />
        <div class="card2">
            <form id="account" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </div>
                        </div>
                        <input id="username" class="validateme validate-username form-control" asp-for="Username" autofocus required />
                        @*<input class="form-control" placeholder="Instructor ID" />*@
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </div>
                        </div>
                        <input class="form-control password" type="password" asp-for="Password" required />
                        <div class="input-group-append eyeBallContainer">
                            <div class="input-group-text border-0 bg-transparent">
                                <i onclick="loginPassword();" class="fas fa-eye" id="togglePassword"></i>
                            </div>
                        </div>
                        @*<input class="form-control" placeholder="Password" />*@
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/password.js"></script>
}