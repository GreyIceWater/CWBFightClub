@model Belt

@{
    ViewData["Title"] = "Belt Entry";
}
<div class="row">
    <div class="col-md-10">
        <h4>Add a Belt</h4>
        <hr />
    </div>
</div>

<form asp-action="Create">
    <div class="row">
        <div class="col-md-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DisciplineID" />
            <div class="form-group">
                <label asp-for="DisciplineID" class="control-label">Discipline</label>
                <input class="form-control" value="@ViewBag.DisciplineName" readonly />
                <span asp-validation-for="DisciplineID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeltDescription" class="control-label"></label>
                <textarea asp-for="BeltDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="BeltDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RankDescription" class="control-label"></label>
                <textarea asp-for="RankDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="RankDescription" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 100px">
                <input style="float:right" type="submit" value="Create" class="btn btn-primary" />
                <div style="float:right; margin-right: 10px">
                    <a class="btn btn-secondary" asp-controller="discipline" asp-action="edit" asp-route-id="@Model.DisciplineID">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

