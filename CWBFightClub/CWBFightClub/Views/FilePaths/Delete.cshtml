@model CWBFightClub.Models.FilePath

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this attachment?</h3>

    <div class="deletestudent_table">

        <center>
            <br />
            <div class="container">
                <h4 class="mx-auto">Attachment</h4>
            </div>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FileName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FileName)
                </dd>
            </dl>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FileType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FileType)
                </dd>
            </dl>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>

            </dl>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Comment)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Comment)
                </dd>
            </dl>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Student)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Student.FirstName)
                </dd>
            </dl>

        </center>

        <br />

        <form asp-action="Delete">
            <input type="hidden" name="id" id="id" value="@Model.FilePathId" />
            <input type="submit" value="Delete" class="btn btn-danger float-right" />
            <a class="btn btn-secondary float-right mr-2" asp-action="Index" asp-controller="Attachments" asp-route-studentid="@Model.StudentID">Back</a>
        </form>
    </div>
